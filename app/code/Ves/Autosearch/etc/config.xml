<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
		<vesautosearch>
			<general>
				<show>1</show>
				<prefix></prefix>
				<show_filter_category>1</show_filter_category>
				<show_image>1</show_image>
				<thumb_width>200</thumb_width>
				<thumb_height>200</thumb_height>
				<show_price>1</show_price>
				<show_short_description>1</show_short_description>
				<short_max_char>100</short_max_char>
				<limit>5</limit>
			</general>
			<search_terms>
				<enable_search_term>1</enable_search_term>
				<limit_term>7</limit_term>
			</search_terms>			
		</vesautosearch>
	</default>
</config>